# MongoDB Atlas Connection Configuration
# Copy this file to .env and update with your actual MongoDB Atlas values

# MongoDB Atlas Connection String
# Get this from your MongoDB Atlas cluster dashboard
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
# Example: mongodb+srv://myuser:mypassword@cluster0.abc123.mongodb.net/mydatabase?retryWrites=true&w=majority
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Database Name (should match the database in your connection string)
MONGODB_DATABASE_NAME=mydatabase

# Connection Timeout (milliseconds) - Atlas may need longer timeouts
MONGODB_TIMEOUT_MS=10000

# Optional: Additional Atlas-specific settings
# Set to true if using Atlas with SSL (recommended)
MONGODB_USE_SSL=true

# Atlas cluster region (for reference)
MONGODB_ATLAS_REGION=us-east-1 